<% @posts.each do |post| %>
  <ul>
    <li><%= link_to post.title, post %> (<%= post.comments.count %> comments)</li>
  </ul>
<% end %>

<br />
 
<% if user_signed_in? %>
	<h2>My Drafts</h2>
 
	<% @drafts.each do |post| %>
	  <ul>
		  <li><%= link_to post.title, post %> (<%= post.comments.count %> comments)</li>
	  </ul>
	<% end %>
 
<% end %>

